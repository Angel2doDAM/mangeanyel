<odoo>
    <data>
        <!-- Vista Tree -->
        <record model="ir.ui.view" id="vista_manageanyel_task_tree">
            <field name="name">vista_manageanyel_task_tree</field>
            <field name="model">manageanyel.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="is_paused"/>
                    <field name="sprint_id"/>
                    <field name="history_id"/>
                    <field name="technologys_id"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form -->
        <record id="vista__manageanyel_task_form" model="ir.ui.view">
            <field name="name">vista__manageanyel_task_form</field>
            <field name="model">manageanyel.task</field>
            <field name="arch" type="xml">
                <form string="formulario_task">
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="is_paused"/>
                            <field name="sprint_id"/>
                            <field name="history_id"/>
                            <field name="technologys_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Gestión acciones -->
        <record model="ir.actions.act_window" id="accion_manageanyel_task_form">
            <field name="name">Listado de Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manageanyel.task</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
          Task
                </p>
                <p> Click <strong> 'Crear' </strong> para añadir nuevos elementos
                </p>
            </field>
        </record>

        <menuitem name="Manage de Angel Mansilla" id="menu_manage_raiz"/>


        <menuitem name="Management" id="Management" parent="menu_manage_raiz"/>

        <!-- acciones -->
        <menuitem name="Task" id="menu_manageanyel_tasks" parent="Management" action="accion_manageanyel_task_form"/>


    </data>
</odoo>